
@model CoverType;

<form method="post" asp-action="Create" asp-controller="Cover">
    <div class="border p-3 mt-4">
        <div class="row mb-2 ">
            <h2 class="text-primary"> Create CoverType </h2>
            <hr />
        </div>
     
        <div class="mb-3">
             <label asp-for="Name"></label>
             <input asp-for="Name" class="form-control" />
             <span asp-validation-for="Name" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
        <a asp-controller="Cover" asp-action="Index" class="btn btn-secondary"  style="width:150px;">Got to list</a>
    </div>
</form>