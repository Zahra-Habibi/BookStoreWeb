
@model CoverType;
@{
    Layout = "_Layout";
}

<form method="post" asp-action="Edit" asp-controller="CoverType">
    <div class="border p-3 mt-4">
        <div class="row mb-2 ">
            <h2 class="text-primary"> Edit CoverType </h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary" style="width:150px;">Edit</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px;">Got to list</a>
    </div>
</form>