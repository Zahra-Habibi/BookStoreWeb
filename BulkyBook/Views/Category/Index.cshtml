@model IEnumerable<Category>

@if (TempData["success"] != null){
    <h2>@TempData["success"]</h2>
}
<div class="container">
   <div class="row">
        <div class="col-6 mt-3">
            <h3>Category list</h3>
        </div>
        <div class="col-6 text-end mt-3 mb-2">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary ">
                <i class="bi bi-pencil-square"></i> &nbsp;   Create New Category
            </a>
        </div>
   </div>
   <div class="col-12">
       <div class="row">
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td style="width:50%">
                                @obj.Name
                            </td>
                            <td style="width:50%">
                                @obj.DisplayOrder
                            </td>
                            <td>
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" type="button" class="btn btn-primary">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2 ">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
       </div>
   </div>
   
</div>